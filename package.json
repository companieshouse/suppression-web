{
  "name": "suppression-web",
  "version": "0.0.1",
  "description": "Web frontend for the 'Suppress My Details' service",
  "main": "dist/server.js",
  "repository": {
    "url": "https://github.com/companieshouse/suppression-web"
  },
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./dist/server.js",
    "start:watch": "nodemon",
    "build": "tsc && gulp copy-views-styles",
    "build:copy-views": "gulp copy-views",
    "build:compile": "tsc",
    "postbuild": "copyfiles -f -V src/views/* dist/views",
    "lint": "tslint -p .",
    "test": "NODE_ENV=test jest --runInBand --coverage",
    "analyse-code": "sonar-scanner"
  },
  "dependencies": {
    "@companieshouse/api-sdk-node": "^1.0.13",
    "@companieshouse/node-session-handler": "^4.1.6",
    "@companieshouse/structured-logging-node": "^1.0.4",
    "@companieshouse/web-security-node": "^1.0.2",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "govuk-frontend": "^3.10.0",
    "http-status-codes": "^2.1.4",
    "ioredis": "^4.19.2",
    "joi": "^17.3.0",
    "moment": "^2.29.1",
    "nunjucks": "^3.2.2",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.8",
    "@types/jest": "^26.0.18",
    "@types/node": "^14.14.10",
    "@types/nunjucks": "^3.1.3",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "copyfiles": "^2.4.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.1.0",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "redis-mock": "^0.55.0",
    "sonarqube-scanner": "^2.8.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2"
  }
}
