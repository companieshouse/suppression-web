local_resource(
  name = 'dev:suppression-web:init',
  cmd = 'npm --silent install'
)

local_resource(
  name = 'dev:suppression-web:build-views',
  cmd = 'npm --silent run build:copy-views',
  deps = [
    'src/views'
  ]
)

local_resource(
  name = 'dev:suppression-web:build-code',
  cmd = 'npm --silent run build:compile',
  deps = [
    'src'
  ],
  ignore = [
    'src/views'
  ]
)

custom_build(
  ref = 'suppression-web:latest',
  command = 'DOCKER_BUILDKIT=1 docker build --ssh default -t $EXPECTED_REF .',
  live_update = [
    sync(
      local_path = './dist',
      remote_path = '/app/dist'
    ),
    restart_container()
  ],
  deps = [
    './dist'
  ]
)
